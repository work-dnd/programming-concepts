    * 
   * * 
  * * * 
 * * * * 
* * * * * 

===========

#include <iostream>

void print_stars(const unsigned int& num_rows)
{
    for(unsigned int i=num_rows-1; i>=0; i--)
    {
        for(unsigned int j=1; j<=num_rows; j++)
        {
            if(j > i)
                std::cout << "* ";
            else
                std::cout << " ";
        }
        std::cout << std::endl;
    }
}

int main() 
{
    unsigned int num_rows = 5;
    print_stars(num_rows);
    return 0;
}
